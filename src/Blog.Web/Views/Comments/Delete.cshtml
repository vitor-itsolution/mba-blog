@model Blog.Core.Models.CommentModel

@{
    ViewData["Title"] = "Deletar comentário";
}

<h1>@ViewData["Title"]</h1>

<h3>Tem certeza que deseja excluir o comentário</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Content)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Content)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Excluir" class="btn btn-danger" />
        <a asp-controller="Posts" asp-action="Comments" asp-route-id="@Model.PostId" class=" btn btn-warning">Voltar</a>
    </form>
</div>
