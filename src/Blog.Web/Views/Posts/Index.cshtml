@model IEnumerable<Blog.Core.Models.PostModel>

@{
    ViewData["Title"] = "Blog do Vitão";
}

<h1>@ViewData["Title"]</h1>

<p style="padding: 20px 0px 20px 0px;">
    <a asp-action="Create" class="btn btn-primary"><span class="fa fa-plus"> Novo</span></a>
</p>

@foreach (var item in Model)
{
    <div>
    <div class="row">
        <div class="col-md-6">

            <div class="row">

                <div class="row">
                    <div class="col">
                        <h3 class="title">@Html.DisplayFor(modelItem => item.Title)</h3>
                    </div>
                    <div class="col">
                        @{
                            if (ViewBag.AuthorId  == @item.AuthorId)
                            {
                                <a class="btn btn-info" asp-action="Edit" asp-route-id="@item.Id"><span
                                        class="fa fa-pencil"></span></a>
                            }

                        }
                        @{
                            if (ViewBag.AuthorId == @item.AuthorId || ViewBag.IsAdmin)
                            {
                                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id"><span
                                        class="fa fa-trash"></span></a>
                            }
                        }
                        </div>
                    </div>

                    <div class="row">
                        <div class="col">
                            <span class="published">Data publicação @item.CreateDate.ToString("dd/MM/yyyy HH:mm:ss")</span>
                        </div>
                        <div class="col">
                            <a asp-action="Comments" asp-route-id="@item.Id"><span
                                    class="published">@Html.DisplayFor(modelItem
                                => item.AmountComment) Comentários</span></a>
                        </div>
                    </div>

                </div>

                <div class="row">
                    <span class="content">@Html.DisplayFor(modelItem => item.Content)</span>
                </div>
            </div>
        </div>
    </div>
    <br />
    <hr />
}
